<body>

<div class="navbar">Admin Angkupi</div>

<div class="container">
    <h2>Tambah Menu</h2>

    <label>Nama Menu</label>
    <input type="text" id="nama">

    <label>Harga</label>
    <input type="number" id="harga">

    <label>Upload Gambar</label>
    <input type="file" id="gambar" accept="image/*">

    <button onclick="tambahMenu()">Tambah Menu</button>

    <hr style="margin: 35px 0;">

    <h2>Daftar Menu</h2>
    <div id="menuList"></div>
</div>

<script>
    let menu = [];

    function tambahMenu() {
        const nama = document.getElementById("nama").value;
        const harga = document.getElementById("harga").value;
        const file = document.getElementById("gambar").files[0];

        if (!nama || !harga || !file) {
            alert("Isi semua data termasuk gambar bro!");
            return;
        }

        const reader = new FileReader();
        reader.onload = function(e) {
            const imgBase64 = e.target.result;

            menu.push({
                nama: nama,
                harga: harga,
                gambar: imgBase64
            });

            tampilMenu();
        };

        reader.readAsDataURL(file);
    }

    function tampilMenu() {
        const area = document.getElementById("menuList");
        area.innerHTML = "";

        menu.forEach((m, i) => {
            area.innerHTML += `
                <div class="menu-card">
                    <img src="${m.gambar}">
                    <div style="flex:1">
                        <b>${m.nama}</b><br>
                        Rp ${m.harga}
                    </div>
                    <button onclick="hapusMenu(${i})">Hapus</button>
                </div>
            `;
        });
    }

    function hapusMenu(i) {
        menu.splice(i, 1);
        tampilMenu();
    }
</script>

</body>
